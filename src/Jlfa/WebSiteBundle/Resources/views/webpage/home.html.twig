{% extends "::backbone.html.twig" %}

{% block carousel %}
<!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
	<div class="item active">
          <img src="{{ asset('img/extendscript-library.svg') }}" onerror="this.onerror=null; this.src='{{ asset('img/extendscript-library.png') }}'">
          <div class="container">
            <div class="carousel-caption">
              <h1>{{ 'page_content.home.carrousel.welcome.title' | trans }}</h1>
              <p>{{ 'page_content.home.carrousel.welcome.content' | trans }}</p>
              <p><a class="btn btn-large btn-ai" href="{{ path('jlfa_web_site_startpage') }}">{{ 'page_content.home.carrousel.welcome.button' | trans }}</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('img/become-member.svg') }}" onerror="this.onerror=null; this.src='{{ asset('img/become-member.png') }}'">
          <div class="container">
            <div class="carousel-caption">
              <h1>{{ 'page_content.home.carrousel.become_member.title' | trans }}</h1>
              <p>{{ 'page_content.home.carrousel.become_member.content' | trans }}</p>
              <p><a class="btn btn-large btn-indd" href="{{ path('fos_user_registration_register')}}">{{ 'page_content.home.carrousel.become_member.button' | trans }}</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('img/open-source.svg') }}" onerror="this.onerror=null; this.src='{{ asset('img/open-source.png') }}'">
          <div class="container">
            <div class="carousel-caption">
              <h1>{{ 'page_content.home.carrousel.open_source.title' | trans }}</h1>
              <p>{{ 'page_content.home.carrousel.open_source.content' | trans }}</p>
              <p><a class="btn btn-large btn-primary" href="{{ path('jlfa_web_site_licencespage') }}">{{ 'page_content.home.carrousel.open_source.button' | trans }}</a></p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div><!-- /.carousel -->

{% endblock %}


{% block content %}
    
      <div class="row featurette">
        <div class="col-md-12">
          <h2>{{ 'page_content.home.why_use.title' | trans }}
              <span class="text-muted">{{ 'page_content.home.why_use.subtitle' | trans }}</span>
          </h2>
          <p class="lead">{{ 'page_content.home.why_use.content' | trans }}</p>
        </div>
      </div>
    
      <hr class="featurette-divider">
      
      <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-lg-12">
            
            <div class="col-md-4">
              <img class="img" src="{{ asset('bundles/jlfawebsite/img/news.png') }}" alt="">
              <h2 class="logo">{{ 'page_content.home.our_goals.feature_one.title' | trans }}</h2>
              <p>{{ 'page_content.home.our_goals.feature_one.content' | trans }}</p>
              <p><a class="btn btn-default" href="{{ path('sdzblog_accueil') }}">{{ 'page_content.home.our_goals.feature_one.button' | trans }}</a></p>
            </div>  
            
            <div class="col-md-4">
              <img class="img" src="{{ asset('bundles/jlfawebsite/img/ampoule.png') }}" alt="">
              <h2 class="logo">{{ 'page_content.home.our_goals.feature_two.title' | trans }}</h2>
              <p>{{ 'page_content.home.our_goals.feature_two.content' | trans }}</p>
              <p><a class="btn btn-default" href="{{ path('jlfa_web_site_participatepage') }}">{{ 'page_content.home.our_goals.feature_two.button' | trans }}</a></p>
            </div><!-- /.col-lg-4 -->
            
            <div class="col-md-4">
                <img class="img" src="{{ asset('bundles/jlfawebsite/img/carte.png') }}" alt="">
              <h2 class="logo">{{ 'page_content.home.our_goals.feature_three.title' | trans }}</h2>
              <p>{{ 'page_content.home.our_goals.feature_three.content' | trans }}</p>
              <p><a class="btn btn-default" href="{{ path('jlfa_web_site_contributorspage') }}">{{ 'page_content.home.our_goals.feature_three.button' | trans }}</a></p>
            </div><!-- /.col-lg-4 -->
        </div>
      </div>
      
      

      
      
      
      
{% endblock %}

