<!-- Modal -->

<div class="modal fade" id="{{ modal_id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">
            {{ 'page_content.blog.index.delete_post.title' | trans}}
        </h4>
      </div>
      <div class="modal-body">
        {{ 'page_content.blog.index.delete_post.content' | trans }} 
        <i>{{ article.titre }}</i>
      </div>
      <div class="modal-footer">
        <form action="{{ path('sdzblog_supprimer', {'id': article.id}) }}" method="post">
            <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {{ render(controller( 'SdzBlogBundle:Blog:delete_form', { 'id': article.id } )) }}
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

